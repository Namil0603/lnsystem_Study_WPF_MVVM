<Window x:Class="lnsystem_Study03_ICD_ItemTemplate_.Dialog.IDInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ID 입력" Height="220" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"  FontSize="16" FontWeight="Bold" Text="ID를 입력하세요:"/>
        <TextBox x:Name="IDTextBox" Grid.Row="1" TextChanged="IDTextBox_TextChanged" Text=""/>
        <TextBlock x:Name="ByteCountTextBlock" Grid.Row="2"  />
        <Button Grid.Row="3" Click="SubmitButton_Click" Background="#007ACC" Foreground="White" FontWeight="Bold">확인</Button>
    </Grid>
</Window>